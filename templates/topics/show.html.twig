{% extends 'base.html.twig' %}

{% block title %}Topics{% endblock %}

{% block body %}
    <h1>Topics</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ topic.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ topic.subject }}</td>
            </tr>
            <tr>
                <th>Edited_at</th>
                <td>{{ topic.editedAt ? topic.editedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ topic.content }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ topic.type }}</td>
            </tr>
            <tr>
                <th>Pin</th>
                <td>{{ topic.pin ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Msg_counter</th>
                <td>{{ topic.msgCounter }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('topics_index') }}">back to list</a>

    <a href="{{ path('topics_edit', {'id': topic.id}) }}">edit</a>

    {{ include('topics/_delete_form.html.twig') }}
{% endblock %}
