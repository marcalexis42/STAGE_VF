<form method="post" action="{{ path('topics_delete', {'id': topic.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce topic ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ topic.id) }}">
    <button class="btn far fa-trash-alt"> </button>
</form>
